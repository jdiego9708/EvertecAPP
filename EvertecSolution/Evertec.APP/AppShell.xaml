<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Evertec.APP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Evertec.APP"
    xmlns:login="clr-namespace:SISEvertec.APP.Views.ViewsLogin"
    xmlns:viewsHome="clr-namespace:SISEvertec.APP.Views.ViewsHome"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Shell.NavBarIsVisible="False"
        Shell.TabBarBackgroundColor="White"
        ContentTemplate="{DataTemplate login:LoginPage}"
        Route="LoginPage" />

    <viewsHome:TabbedMainPage
        Route="HomePage" />

</Shell>
